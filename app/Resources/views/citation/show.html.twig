{% extends 'base.html.twig' %}

{% block body %}
    <h1>Citation</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ citation.id }}</td>
            </tr>
            <tr>
                <th>Auteur</th>
                <td>{{ citation.auteur }}</td>
            </tr>
            <tr>
                <th>Extrait</th>
                <td>{{ citation.extrait }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('citation_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('citation_edit', { 'id': citation.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
